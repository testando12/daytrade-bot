# Configurações da Aplicação
APP_NAME=Day Trade Bot
APP_VERSION=1.0.0
DEBUG=False

# Banco de Dados (SQLite local por padrão, PostgreSQL em produção)
DATABASE_URL=sqlite:///./data/daytrade.db
# DATABASE_URL=postgresql://user:password@localhost:5432/daytrade_db

# Mercado
MARKET_INTERVALS=5,15,60
MARKET_API_TIMEOUT=10
PREFERRED_MARKET=binance

# BRAPI — API nativa da B3 (recomendado para ações brasileiras)
# Sem token: funciona para PETR4, MGLU3, VALE3, ITUB4 (gratuito, delay 30min)
# Com token: todos os ativos da B3 (obtenha grátis em https://brapi.dev/dashboard)
BRAPI_TOKEN=

# Binance API (opcional para dados públicos, obrigatório para ordens)
BINANCE_API_KEY=
BINANCE_API_SECRET=

# Bot - Capital e Posições
INITIAL_CAPITAL=150
MAX_POSITION_PERCENTAGE=0.30
MIN_POSITION_AMOUNT=10.0
STOP_LOSS_PERCENTAGE=0.05
TAKE_PROFIT_PERCENTAGE=0.10
REBALANCE_INTERVAL=300

# Limites Operacionais
MAX_DAILY_LOSS_PERCENTAGE=0.10
MAX_TRADES_PER_HOUR=20
MAX_TRADES_PER_DAY=100

# Proteção Global - IRQ
IRQ_THRESHOLD_HIGH=0.70
IRQ_THRESHOLD_VERY_HIGH=0.80
IRQ_THRESHOLD_CRITICAL=0.90
IRQ_REDUCTION_MODERATE=0.40
IRQ_REDUCTION_HIGH=0.70

# Momentum - Pesos
MOMENTUM_WEIGHT_RETURN=0.50
MOMENTUM_WEIGHT_TREND=0.30
MOMENTUM_WEIGHT_VOLUME=0.20

# Ativos Permitidos
ALLOWED_ASSETS=BTC,ETH,BNB,SOL,ADA,XRP,DOT,LINK,MATIC,AVAX

# Alertas - Telegram (obter em @BotFather)
TELEGRAM_BOT_TOKEN=
TELEGRAM_CHAT_ID=

# Alertas - Discord (Server Settings > Webhooks)
DISCORD_WEBHOOK_URL=

# Logs
LOG_LEVEL=INFO
